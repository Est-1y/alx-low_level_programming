NAME=school
CC=gcc  # Compiler (assuming gcc)
RM=rm -f  # Delete command with force flag

# rules
%.o: %.c m.h
        $(CC) -Wall -Werror -Wextra -pedantic -c $< -o $@

all: $(SRC:.c=.o)
        $(CC) $(SRC:.c=.o) -o $(NAME)

clean fclean oclean re:
	@$(RM) $(NAME) $(SRC:.c=.o) *~ *.swp

.PHONY: clean fclean oclean re

# Ensures m.h existence
m.h:
	@echo "m.h is required for compilation. Please create it."
	@exit 1
