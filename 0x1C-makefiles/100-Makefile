# school project make file

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm -f


COMPILE = $(CC) -Wall -Werror -Wextra -pedantic

# clean
all: $(NAME)

$(NAME): $(OBJ)
        $(COMPILE) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME) $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all

# m.h
-include m.h

# Clean and rebuild
.PHONY: all clean oclean fclean re
